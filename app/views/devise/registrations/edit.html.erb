<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="text-center text-2xl font-bold tracking-tight text-gray-900">
      Edit <%= resource_name.to_s.humanize %>
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :first_name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :last_name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :age, "Age", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.number_field :age, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-500">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div>
        <%= f.label :password, "New password (leave blank if unchanged)", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
        <% if @minimum_password_length %>
          <p class="mt-1 text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.label :current_password, "Current password (for confirmation)", class: "block text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit "Update", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>

    <div class="mt-8 border-t pt-6 text-center">
      <h3 class="text-sm text-gray-700 mb-2 font-medium">Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" }, class: "text-sm font-semibold text-red-600 hover:text-red-500" %>
      <div class="mt-4">
        <%= link_to "Back", request.referer || root_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
  </div>
</div>
